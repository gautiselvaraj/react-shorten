{
  "name": "react-shorten",
  "version": "1.0.5",
  "description": "React component to shorten text",
  "repository": "https://github.com/gautiselvaraj/react-shorten.git",
  "author": "Gauti <me@gauti.info> (https://www.gauti.info)",
  "homepage": "https://www.gauti.info/react-shorten",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "nwb serve-react-demo",
    "flow:copy": "flow-copy-source -v -i '**/__tests__/**' src lib",
    "precommit": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "coverage:watch": "jest --coverage --watch"
  },
  "dependencies": {
    "canvas": "^1.6.10",
    "exenv": "^1.2.2"
  },
  "peerDependencies": {
    "react": ">=0.14.0"
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.69.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "nwb": "0.21.x",
    "prettier": "^1.11.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "keywords": [
    "react-component"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>setupTests"
    ],
    "testMatch": [
      "<rootDir>tests/**/*.js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/jest.transform.js"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
